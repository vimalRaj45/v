  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" />
  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      max-width: 600px;
      margin-top: 50px;
      background: #fff;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .form-control {
      margin-bottom: 20px;
    }
    .preview-box {
      margin-top: 20px;
      text-align: center;
      border: 1px dashed #ccc;
      padding: 15px;
      border-radius: 8px;
      display: none;
    }
    .loader {
      display: none;
      margin-top: 20px;
      text-align: center;
    }
    .loader img {
      width: 50px;
    }
    .success-box {
      margin-top: 20px;
      display: none;
      background-color: #d4edda;
      padding: 15px;
      border-radius: 8px;
    }
